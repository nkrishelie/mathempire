\setcounter{upr}{0}
\setcounter{footnote}{0}
\setcounter{figure}{0}
\setcounter{table}{0}
\setcounter{equation}{0}
\setcounter{thrm}{0}
\setcounter{thmm}{0}
\setcounter{lem}{0}
\setcounter{sled}{0}
